<style media="screen">
  img {
    max-width: 200px;
    max-height: 200px;
  }
</style>

<p id="notice"><%= notice %></p>

<h1><%= @article.title %></h1>

<p>
  <%= image_tag @article.image_url, align: 'right' %>
  <%= @article.body %>
</p>

<% if user_signed_in? %>
<%= link_to 'Edit', edit_article_path(@article), class: "btn btn-default" %>
<%= link_to 'Destroy', @article, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
<% end %>
<%= link_to 'Back', articles_path, class: "btn btn-default" %>
